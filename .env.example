# Firebase Configuration
FIREBASE_PROJECT_ID=ajoturn-prod
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=ajoturn-prod.firebaseapp.com
FIREBASE_DATABASE_URL=https://ajoturn-prod-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=ajoturn-prod.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:android:abcdefghijk123456

# API Configuration
API_BASE_URL=https://api.ajoturn.com
API_VERSION=v1

# M-Pesa Configuration (for payment processing)
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_ENVIRONMENT=sandbox # or production
MPESA_BUSINESS_SHORT_CODE=174379
MPESA_PASSKEY=your_mpesa_passkey

# SMS Configuration (for notifications)
SMS_PROVIDER=twilio # or africas_talking
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
AFRICAS_TALKING_USERNAME=sandbox
AFRICAS_TALKING_API_KEY=your_africas_talking_api_key

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key

# Development
DEBUG_MODE=true
LOG_LEVEL=info # debug, info, warn, error
MOCK_PAYMENTS=true
MOCK_SMS=true

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here

# App Store / Play Store
IOS_APP_ID=123456789
ANDROID_PACKAGE_NAME=com.ajoturn.app

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=UA-123456789-1
CRASHLYTICS_ENABLED=true

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_OFFLINE_MODE=true
ENABLE_PAYMENT_INTEGRATION=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Environment
NODE_ENV=development